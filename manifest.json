{
  "manifest_version": 3,
  "name": "Nevua Markets - Polymarket Price Alerts",
  "version": "1.2.0",
  "description": "Real-time price alerts for Polymarket events.",
  "permissions": ["notifications", "storage"],
  "host_permissions": ["https://polymarket.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://polymarket.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Polymarket Alerts",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon128.png"
  }
}
  
